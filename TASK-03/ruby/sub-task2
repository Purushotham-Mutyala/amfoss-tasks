
input_file_path = 'input.txt'
output_file_path = 'output.txt'


begin
  input_string = File.read(input_file_path)
rescue Errno::ENOENT
  puts "Error: '#{input_file_path}' not found."
  exit
end


begin
  File.write(output_file_path, input_string)
  puts "String successfully written to '#{output_file_path}'."
rescue IOError => e
  puts "Error writing to file: #{e.message}"
end
